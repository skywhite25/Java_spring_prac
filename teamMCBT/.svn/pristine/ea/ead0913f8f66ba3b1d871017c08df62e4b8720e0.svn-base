<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespcae="package + interface" -->
<mapper namespace="com.mcbt.board.mapper.BoardMapper">
	<!-- 1. 게시판 리스트 -->
	<!-- id="method" -->
	<!-- 01. 게시글 전체 목록 조회 및 검색조회까지 -->
	<select id="list" resultType="com.mcbt.board.vo.BoardVO">
		SELECT * FROM (
		SELECT ROWNUM AS rn, A.* FROM (
		SELECT ROWNUM, no, title, b.writedate, writer, hit, show, category,
		<!-- **댓글숫자표시 -->
		(SELECT COUNT(*) replyhit FROM reply WHERE no = b.no) AS replyhit FROM
		board b
		<!-- mybatis에서는 데이터 자동변환을 한다. 글자가 한자이면 char -->
		<include refid="search" />	

		order by no desc, b.writedate DESC
		) A
		) WHERE rn BETWEEN #{startRow} AND #{endRow}
	</select>

	<select id="countArticle" resultType="int">
		select count(*) from board b
		<!-- mybatis에서는 데이터 자동변환을 한다. 글자가 한자이면 char -->
		<include refid="search" />
	</select>

	<!-- 1-1. 게시판 전체 글의 갯수 -->
	<select id="getTotalRow" resultType="int">
		select count(*) cnt from board b
		<!-- mybatis에서는 데이터 자동변환을 한다. 글자가 한자이면 char -->
		<include refid="search" />
	</select>

	<!-- 검색 조건 쿼리 따로 저장하기 -->
	<sql id="search">
		<!-- mybatis에서는 데이터 자동변환을 한다. 글자가 한자이면 char -->
		<if test="word != null and word != ''.toString()">
			<!-- 검색하는 데이터가 있는 경우 where가 나온다. -->
			WHERE 1 = 0
			<if test="key == 't'.toString()">
				OR title like '%' || #{word} || '%'
			</if>
			<if test="key == 'c'.toString()">
				OR content like '%' || #{word} || '%'
			</if>
			<if test="key == 'w'.toString()">
				OR writer like '%' || #{word} || '%'
			</if>
			<if test="key == 'tcw'">
				OR
				writer like '%'||#{word}||'%'
				OR
				content like '%'||#{word}||'%'
				OR
				title like '%'||#{word}||'%'
			</if>
		</if>

	</sql>
	<!-- 2. 게시판 글보기 -->
	<select id="view" resultType="com.mcbt.board.vo.BoardVO">
		SELECT no, title, content, writer,
		writedate, hit, show, category, (SELECT COUNT(*) replyhit FROM reply
		WHERE no = #{no}) AS replyhit
		FROM board where no = #{no}
	</select>
	<!-- 2-1. 게시판 조회수 1증가 -->
	<update id="increase">
		update board set hit = hit + 1 where no = #{no}
	</update>

	<!-- 3. 게시판 글쓰기 -->
	<insert id="write">
		insert into board(no, title, content, writer, category)
		values(board_seq.nextval, #{title}, #{content}, #{writer}, #{category})
	</insert>

	<!-- 4. 게시판 글수정 -->
	<update id="update">
		update board set category = #{category}, title = #{title}, content = #{content}, writer = #{writer}
		where no = #{no}
	</update>

	<update id="delete">
		UPDATE board SET show = 'N'
		WHERE no = #{no}
	</update>
</mapper>